<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>OZNote</title>
        <link rel="stylesheet" href="/public/styles.css" />
        <link rel="icon" href="/public/images.png" class="icon" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <header
            class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom"
        >
            <div class="col-md-3 mb-2 mb-md-0" id="logo">
                <a
                    href="index.html"
                    class="d-inline-flex link-body-emphasis text-decoration-none"
                >
                    <object
                        type="image/svg+xml"
                        data="/public/co_logo.svg"
                        height="30"
                        width="120"
                    ></object>
                </a>
            </div>
        </header>

        <div class="test">
            <div id="login">
                <form action="/login" method="post">
                    <img
                        id="Logo"
                        class="mb-3"
                        src="/public/images.png"
                        alt=""
                        width="60"
                        height="60"
                    />
                    <h1 class="h3 mb-3 fw-normal">Bitte Anmelden</h1>
                    <% if (error === "1") { %>

                    <div
                        class="alert alert-danger d-flex align-items-center"
                        role="alert"
                    >
                        <svg
                            class="bi me-1"
                            width="10"
                            height="10"
                            role="img"
                            aria-label="Danger:"
                        >
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        <div>Falsche Anmeldedaten!</div>
                    </div>

                    <% } %>

                    <div class="form-floating">
                        <input
                            type="text"
                            class="form-control"
                            name="username"
                            id="floatingInput"
                            placeholder="username"
                        />
                        <label for="floatingInput">Benutzername</label>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input
                            type="password"
                            class="form-control"
                            name="password"
                            id="floatingPassword"
                            placeholder="Password"
                        />
                        <label for="floatingPassword">Password</label>
                    </div>

                    <div class="form-check text-start my-2"></div>
                    <button class="btn btn-outline" type="submit" id="butt1">
                        Sign in
                    </button>
                    <p class="mt-5 mb-3 text-body-secondary">Â© 2024</p>
                </form>
            </div>
        </div>
    </body>
</html>
