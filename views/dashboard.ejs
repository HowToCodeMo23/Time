<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>OZNote</title>
        <link rel="stylesheet" href="/public/styles.css" />
        <link rel="icon" href="/public/images.png" class="icon" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <header class="navbar navbar-expand-md mb-4">
            <div class="container-fluid">
                <!-- Logo ganz links -->
                <div class="navbar-brand">
                    <a id="logo" href="/">
                        <img
                            src="/public/co_logo.svg"
                            height="30"
                            width="120"
                        />
                    </a>
                </div>

                <!-- Platzhalter für Dashboard in der Mitte -->
                <div class="navbar-nav flex-fill justify-content-center">
                    <form action="/calendar" class="d-flex">
                        <button class="btn btn-outline-light" type="submit">
                            Dashboard
                        </button>
                    </form>
                </div>

                <!-- Logout-Button ganz rechts -->
                <div class="navbar-nav">
                    <form action="/logout" class="d-flex">
                        <button
                            class="btn btn-outline"
                            type="submit"
                            id="butt2"
                        >
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </header>

        <div id="table">
            <div id="timeTable">
                <form action="time" method="post">
                    <div class="divcontainer">
                        <div class="grid-item">
                            <label for="floatingInput">Startzeit</label>
                            <input
                                type="text"
                                class="form-control"
                                name="time1"
                                id="floatingInput"
                                placeholder=""
                            />
                        </div>

                        <div class="grid-item2">
                            <label for="floatingInput">Endzeit</label>
                            <input
                                type="text"
                                class="form-control"
                                name="time2"
                                id="floatingInput"
                                placeholder=""
                            />
                        </div>

                        <!-- Dropdown button -->

                        <div class="grid-item3">
                            <select class="form-select" name="Projekte">
                                <option value="" selected>
                                    Projekte auswählen
                                </option>
                                <% projects.forEach(project => { %>
                                <option value="<%= project.projectid %>">
                                    <%= project.projectname %>
                                </option>
                                <% }); %>
                            </select>
                        </div>

                        <form action="/submit">
                            <button
                                class="btn btn-outline"
                                type="submit"
                                id="butt1"
                            >
                                Speichern
                            </button>
                        </form>
                    </div>
                </form>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-Ys6e/e6EwKpDkXKnZ/KFi+C6FVlKZo4W3VABndWMDI2k0S47Sg9AjTkmLU6vyyVX"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
